<!DOCTYPE html>
<html>
<head>
  <title>TFV-FileUploader</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<%= render 'layouts/navbar' %>

<body>
  <% if notice %>
  <p class="center alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="center alert alert-danger"><%= alert %></p>
  <% end %>
  <%= yield %>
</body>
</html>
